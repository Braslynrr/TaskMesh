{
  "version": "0.2.0",
  "configurations": [
        {
    "name": "Debug Jest (current test)",
    "type": "node",
    "request": "launch",
    "runtimeExecutable": "node",
    "runtimeArgs": [
      "--inspect-brk",
      "./node_modules/jest/bin/jest.js",
      "${file}",
      "--runInBand"
    ],
    "cwd": "${workspaceFolder}",
    "skipFiles": ["<node_internals>/**"]
  },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug TS (tsx watch)",
      "runtimeExecutable": "node",
      "runtimeArgs": [
        "--inspect",
        "./node_modules/tsx/dist/cli.mjs",
        "watch",
        "src/server.ts"
      ],
      "cwd": "${workspaceFolder}",
      "skipFiles": ["<node_internals>/**"]
    },

  ]
}
